<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title ? @page_title : 'vLog' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fluid">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1><%= link_to 'vLog', root_path, class: 'navbar-brand' %><small class="mksm">/manager</small></h1>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller] == 'admin/posts' ? 'active' : '' %>"><%= link_to 'Posts', admin_posts_path %></li>
            <li class="<%= params[:controller] == 'admin/categories' ? 'active' : '' %>"><%= link_to 'Categories', admin_categories_path %></li>
            <li class="<%= params[:controller] == 'admin/users' ? 'active' : '' %>"><%= link_to 'Users', admin_users_path %></li>
          </ul>

         <%= render 'partials/admin/search' %>

        </div><!--/.nav-collapse -->
      </div>
    </nav> 

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <% if flash[:notice] %>
              <div class="alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= flash[:notice] %>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    </section>


    <footer>
      <p class="text-center">Created &amp; Powered by Mher Margaryan <a href="../login.html">|Admin|</a> <%= link_to '|Front|', root_path %></p>
    </footer>


   
  </body>
</html>