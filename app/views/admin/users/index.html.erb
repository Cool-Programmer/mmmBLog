<div class="well">
  <h2 class="page-header">Manage users <%= link_to 'Add New', new_admin_user_path, class: 'btn btn-success' %> </h2>
<% if @users.exists? %>
  <table class="table table-hover table-striped">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Register Date</th>
      <th>Actions</th>
    </tr>

    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-primary' %> <%= link_to 'Delete', admin_user_path(user), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this user?'} %></td>
    </tr>
    <% end %>
  </table>
  <%= will_paginate @users %>
<% else %>
  <p>There are currently no users.</p>
<% end %>
</div>