<% if params[:controller] == 'posts' or params[:controller] == 'categories' %>
	<div class="list-group">
 		<ul class="list-unstyled">
			<% @categories.each do |category| %>
			    <%= link_to category.name, category_path(category.id), class: 'list-group-item' %>
			<% end %>
		</ul>
	</div>
<% end %>